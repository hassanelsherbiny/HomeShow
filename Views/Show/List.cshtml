        <div class="col-md-3 text-center card" style="padding:0" draggable="false">
            <a draggable="false" href="/Show/details/@ViewBag.Id/?ShowName=@item.Name">
                <div draggable="false" class="poster" style="position: relative;background:url('@item.ImagePath') no-repeat center;background-size: cover;  ">
                    <span draggable="false" style="position: absolute;top: 50%;height: 0;opacity: 0;display: block;">@item.Name</span>
                </div>
                @*<img src="@item.ImagePath" onerror="if (this.src != '/content/img/seriesNoLogo.jpg') this.src = '/content/img/seriesNoLogo.jpg';" class="img-responsive" />*@
